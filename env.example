# RabbitMQ Configuration
RABBITMQ_USERNAME=openstack
RABBITMQ_PASSWORD=your_password_here
RABBITMQ_HOSTS=10.1.0.11:5672,10.1.0.12:5672,10.1.0.13:5672

# Queue Configuration
QUEUE_NAME=openstack-rabbitmq-notification-to-webhook
TOPIC=notifications.*

# OpenStack Exchanges
EXCHANGES=nova,neutron,openstack,heat,magnum,cinder

# Webhook Configuration
WEBHOOK_URL=https://webhook_url/blah

# Event Type Filtering (comma-separated list of event types to ignore)
IGNORED_EVENT_TYPES=compute.instance.exists

# Timezone Configuration (optional - defaults to UTC in Dockerfile)
TZ=UTC